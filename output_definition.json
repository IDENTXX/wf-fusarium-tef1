      "mime-type": "text/tab-separated-values",
      "optional": false,
      "type": "aggregated"
    },
    "all-samples-long": {
      "filepath": "summary/all_samples.long.tsv",
      "title": "All samples (long table)",
      "description": "Long-format table with cluster counts and best BLAST hit per cluster.",
      "mime-type": "text/tab-separated-values",
      "optional": false,
      "type": "aggregated"
    },
    "seqkit-stats": {
      "filepath": "per_sample/{{ alias }}/qc/{{ alias }}.seqkit.stats.tsv",
      "title": "Read QC stats (seqkit)",
      "description": "Basic QC statistics per sample.",
      "mime-type": "text/tab-separated-values",
      "optional": false,
      "type": "per-sample"
    },
    "cluster-counts": {
      "filepath": "per_sample/{{ alias }}/clusters/{{ alias }}.cluster_counts.tsv",
      "title": "Cluster counts",
      "description": "Read count per cluster (from VSEARCH UC).",
