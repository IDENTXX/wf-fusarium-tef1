      "mime-type": "text/tab-separated-values",
      "optional": true,
      "type": "per-sample"
    },
    "taxonomy-tsv": {
      "filepath": "per_sample/{{ alias }}/taxonomy/{{ alias }}.taxonomy.tsv",
      "title": "Cluster taxonomy",
